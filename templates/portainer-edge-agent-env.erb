<% if @edge_id.empty? or @edge_key.empty? %>
# Set portainer::edge_agent::edge_id and portainer::edge_agent::edge_key in the host Hiera
# KEY_OPTIONS="-e EDGE_ID=... -e EDGE_KEY=..."
<% else -%>
KEY_OPTIONS="-e EDGE_ID=<%= @edge_id %> -e EDGE_KEY=<%= @edge_key %>"
<% end -%>